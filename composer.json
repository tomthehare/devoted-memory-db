{
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpspec/prophecy-phpunit": "^2.1",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Devoted\\MemoryDB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Devoted\\MemoryDB\\Tests\\": "tests/"
        }
    },
    "config": {
        "vendor-dir": "/devoted/memory-db/vendor",
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2.0"
        },
        "sort-packages": true
    }
}
